{
  "name": "Secarta - Dev",
  "author": "",
  "version": "0.0.1",
  "description": "Write Secure Code.",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "https://app.secarta.io/*",
    "https://api.secarta.io/*",
    "activeTab"
  ],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": true
  },
  "applications": {
    "gecko": {
      "id": "extension@secarta.io"
    }
  },
  "browser_action": {
    "default_title": "Secarta - Dev",
    "default_icon": "secarta.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*", "https://www.npmjs.com/*"],
      "css": ["src/voting/voting.css"],
      "js": ["src/voting/voting.js"]
    },
    {
      "matches": ["https://app.secarta.io/*"],
      "js": ["src/secarta/get-token.js"]
    }
  ]
}
