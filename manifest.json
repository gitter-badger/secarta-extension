{
  "name": "Secarta",
  "author": "",
  "version": "1.0.3",
  "description": "Measure Security in Code",
  "manifest_version": 2,
  "permissions": ["storage", "https://app.returntocorp.com/*/*"],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "applications": {
    "gecko": {
      "id": "secarta-extension@returntocorp.com"
    }
  },
  "browser_action": {
    "default_title": "Secarta",
    "default_icon": "secarta.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "js": ["src/inject.js"]
    },
    {
      "matches": ["https://app.returntocorp.com/*"],
      "js": ["src/steal-token.js"]
    }
  ]
}
